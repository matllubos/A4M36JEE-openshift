<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>FlightSystem</display-name>

    <!-- Change to "Production" when you are ready to deploy -->
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>

    <context-param>
        <param-name>javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
        <param-value>true</param-value>
    </context-param>

    <context-param>
        <param-name>javax.faces.VALIDATE_EMPTY_FIELDS</param-name>
        <param-value>true</param-value>
    </context-param>

    <context-param>
        <param-name>org.richfaces.push.jms.enabled</param-name>
        <param-value>true</param-value>
    </context-param>

    <context-param>
        <param-name>org.richfaces.enableControlSkinning</param-name>
        <param-value>false</param-value>
    </context-param>

    <context-param>
        <param-name>org.richfaces.skin</param-name>
        <param-value>classic</param-value>
    </context-param>

    <context-param>
        <param-name>org.richfaces.responsiveDesign</param-name>
        <param-value>true</param-value>
    </context-param>

    <context-param>
        <param-name>org.richfaces.clientSideStyle</param-name>
        <param-value>false</param-value>
    </context-param>

    <!-- Welcome page -->
    <welcome-file-list>
        <welcome-file>/flights.xhtml</welcome-file>
    </welcome-file-list>

    <!-- JSF mapping -->
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Map these files with JSF -->
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.jsf</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/flights.xhtml</location>
    </error-page>

    <mime-mapping>
        <extension>less</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>

    <!-- login configuration -->
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>WebSecurityBasic</realm-name>
        <form-login-config>
            <form-login-page>/login-form.xhtml</form-login-page>
            <form-error-page>/login-form.xhtml</form-error-page>
        </form-login-config>
    </login-config>

    <!-- Security roles used by this web application -->
    <security-role>
        <role-name>flight-manager</role-name>
    </security-role>
    <security-role>
        <role-name>admin</role-name>
    </security-role>


    <security-constraint>
        <web-resource-collection>
            <web-resource-name>login</web-resource-name>
            <description/>
            <url-pattern>/login.jsf</url-pattern>
            <url-pattern>/login.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>destination</web-resource-name>
            <description/>
            <url-pattern>/destination.jsf</url-pattern>
            <url-pattern>/destination.xhtml</url-pattern>
            <url-pattern>/destinations.jsf</url-pattern>
            <url-pattern>/destinations.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>flight</web-resource-name>
            <description/>
            <url-pattern>/flight.jsf</url-pattern>
            <url-pattern>/flight.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
            <role-name>flight-manager</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
